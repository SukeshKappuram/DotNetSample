@model IEnumerable<Ekart.Models.Category>

@{
    ViewData["Title"] = "View " + TempData["Title"];
}

<h1>@TempData["Title"]</h1>

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-action="Create">Add @TempData["message"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-controller="Products" asp-action="Index" asp-route-id="@item.Id">View Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>
